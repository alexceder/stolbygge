<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/listBackground</item>
        <item name="android:buttonStyle">@style/normalButton</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="bg_button">#00BCD4</item>
        <item name="bg_list">#00796B</item>-->
    </style>

    <style name="normalButton" parent="android:style/Widget.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="listBackground" parent="AppTheme">
        <item name="android:background">@color/teal_dark</item>
        <item name="android:gravity">center_horizontal</item>
        <!--
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/actionbar_background_green</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>-->
    </style>
    <style name="InstructionsTheme" parent="AppTheme">
        <item name="android:background">#00796B</item>
    </style>
</resources>